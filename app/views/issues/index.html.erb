<div class="row">
	<div class="small-12 columns">
			<h1>Check Your Maintenance Request Status:</h1>
	</div>
</div>
<div class="issue_status_container">
<% if @issues.empty? %>
<div class="row">
	<div class="small-7 columns">
	You have no maintenance requests yet.
	</div>
	<div class="small-5 columns">
	<%= link_to "Make a Maintenance Request", new_issue_path, class: "button medium" %>
	</div>
</div>
<% else %>
	<% @issues.each do |issue| %>
	<div class="row">
		<div class="small-3 columns">
			<% if issue.status.nil? %>
				<%= "Issue submitted" %>
			<% else %>
				<%= issue.status %>
			<% end %>
		</div>
		<div class="small-3 columns">
			<%= issue.description %>
		</div>
		<div class="small-3 columns">
			<%= issue.location %>
		</div>
		<div class="small-3 columns">
			<%= issue.tenant_notes %>
		</div>
	</div>
	<% end %>
<% end %>
</div>