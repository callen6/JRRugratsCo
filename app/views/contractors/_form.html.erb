<%= form_for(@contractor) do |f| %>
<div class="row">
	<div class="small-3 columns">
  <%= f.label :full_name, "Contractor's full name:" %>
  <%= f.text_field :full_name %><br />
  </div>
  <div class="small-3 columns">
  <%= f.label :phone_number, "Phone number:" %>
  <%= f.text_field :phone_number %><br />
  </div>
  <div class="small-4 columns">
  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %><br />
  </div>
  <div class="small-2 columns">
  <br />
  <%= f.submit "Add Contractor", class: "button small" %>
  </div>
</div>
<% end %>